<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="useServices" class="com.example.osgi.service.use.UseServices" init-method="useServices">
		<property name="services" ref="osgiServices" />
	</bean>

	<bean id="osgiServices" class="com.example.osgi.bundle.OsgiServices" init-method="init" destroy-method="close" />



</beans>
